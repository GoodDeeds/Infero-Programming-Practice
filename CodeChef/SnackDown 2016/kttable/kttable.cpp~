#include<iostream>
#include<vector>
using namespace std;
int main()
{
	long long int t,n,i,j,k,l;
	cin>>t;
	for(i=0;i<t;i++)
	{
		cin>>n;
		vector<long long int> a(n);
		vector<long long int> b(n);
		for(j=0;j<n;j++)
		{
			cin>>a[j];
		}
		for(j=0;j<n;j++)
		{
			cin>>b[j];
		}
		long long int count=0;
		if(a[0]>=b[0])
		{
			count++;
		}
		for(j=0;j<(n-1);j++)
		{
			if((a[j+1]-a[j])>(b[j+1])
			{
				count++;
			}
		}
		cout<<count<<endl;
	}
	return 0;
}
