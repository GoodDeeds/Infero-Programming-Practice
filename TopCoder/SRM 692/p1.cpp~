#include<iostream>
#include<string>
using namespace std;
int main()
{
	string inp;
	int n,i,j,k;
	long long res=0;
	cin>>inp;
	n=inp.size();
	int *arr=new int[n];
	int *cumu=new int[n];
	for(i=0;i<n;i++)
	{
		cumu[i]=0;
	}
	cumu[n-1]=0;
	for(i=0;i<n;i++)
	{
		cin>>arr[i];
		
	}
	for(i=(n-2);i>=0;i--)
	{
		if(inp[i+1]=='b')
		{
			cumu[i]=cumu[i+1]+1;
		}
		else
		{
			cumu[i]=cumu[i+1];
		}
		
	}
	for(i=0;i<n;i++)
	{
		res+=(cumu[i]*arr[i]);
	}
	cout<<res<<endl;
	return 0;	
}
